## Environment ##
NODE_ENV=production


## Server ##
PORT=4000
HOST=localhost


## DataBase ##
DB_HOST=localhost
DB_PORT=5432
DB_USER=albert
DB_NAME=notes_db
DB_PASSWORD=password


## Setup jet-logger ##
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE


## Authentication ##
# SECURE_COOKIE 'false' here for demo-ing. But ideally should be true.
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
JWT_SECRET=xxxxxxxxxxxxxx
COOKIE_SECRET=xxxxxxxxxxxxxx
# expires in 3 days
COOKIE_EXP=259200000
ACCESS_TOKEN_EXPIRES = 15d 
REFRESH_TOKEN_EXPIRES = 7d

## Encryption ##
# 32-character secret key for AES-256 encryption (CHANGE THIS IN PRODUCTION!)
ENCRYPTION_KEY=CHANGE-THIS-TO-SECURE-KEY-32CH

## Slack ##
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_CHANNEL_ID=your-slack-channel-id

## Enhanced Polling System ##
# Base polling interval in milliseconds (default: 5000ms = 5 seconds)
POLLING_INTERVAL=5000

# Database lookback window in milliseconds (default: 300000ms = 5 minutes)
LOOKBACK_WINDOW=300000

# Maximum retry attempts for failed polls (default: 3)
MAX_RETRIES=3

# Exponential backoff multiplier (default: 2)
BACKOFF_MULTIPLIER=2

# Maximum backoff delay in milliseconds (default: 60000ms = 1 minute)
MAX_BACKOFF=60000
