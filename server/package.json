    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "jasmine": "^5.5.0",
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
