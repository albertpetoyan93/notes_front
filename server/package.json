{
  "name": "notes-app-server",
  "version": "1.0.0",
  "description": "Backend API for Notes Application",
  "scripts": {
    "build": "npx ts-node ./scripts/build.ts",
    "dev:hot": "cross-env NODE_ENV=development npx ts-node -r ./preload.js ./src",
    "dev": "nodemon --exec \"npm run dev:hot\" --watch ./src -e ts",
    "start": "cross-env NODE_ENV=production node -r ./preload.js ./dist",
    "migrate": "npx ts-node -r module-alias/register ./src/configs/DB/migrate.ts"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@slack/web-api": "^7.9.3",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.6",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "inserturlparams": "^2.0.4",
    "jet-logger": "^2.0.1",
    "jet-paths": "^1.0.9",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "logger": "^0.0.1",
    "md5": "^2.3.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.5",
    "pg": "^8.16.3",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
